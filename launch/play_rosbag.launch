<?xml version="1.0" encoding="UTF-8"?>
<launch>

    <arg name="filename" default="$(find delta_perception)/bags/portland-02.bag" />

    <!-- Play rosbag record -->
    <node 
        pkg="rosbag"
        type="play"
        name="player"
        output="screen"
        args="--clock --loop --quiet --rate=1 $(arg filename)" />

    <!-- Run the perception pipeline -->
    <node   
        pkg="delta_perception"
        type="marker_array_publisher.py"
        name="marker_array_publisher"
        output="screen">
    </node>

</launch>
